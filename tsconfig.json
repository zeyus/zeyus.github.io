{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"allowImportingTsExtensions": true,
		"alwaysStrict": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		// "types": ["vidstack/globals"],
		"noEmit": true,
		"target": "ESNext",
		"module": "ESNext",
		"isolatedModules": true,
		"lib": [
			"ES2024",
			"ESNext",
			"DOM",
			"DOM.Iterable"
		]
	}
}
